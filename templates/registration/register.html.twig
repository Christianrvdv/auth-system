{% extends 'base.html.twig' %}

{% block title %}Registro - Sistema de Autenticación{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0 text-center">
                        <i class="bi bi-person-plus"></i> Crear Cuenta
                    </h4>
                </div>
                <div class="card-body p-4">
                    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(registrationForm.firstName, 'Nombre') }}
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                {{ form_widget(registrationForm.firstName, {'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Tu nombre'
                                }}) }}
                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.firstName) }}
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            {{ form_label(registrationForm.lastName, 'Apellido') }}
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                {{ form_widget(registrationForm.lastName, {'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Tu apellido'
                                }}) }}
                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.lastName) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.email, 'Email') }}
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            {{ form_widget(registrationForm.email, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'usuario@ejemplo.com'
                            }}) }}
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.email) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword.first, 'Contraseña') }}
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            {{ form_widget(registrationForm.plainPassword.first, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Mínimo 6 caracteres'
                            }}) }}
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword.second, 'Repetir Contraseña') }}
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            {{ form_widget(registrationForm.plainPassword.second, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Repite tu contraseña'
                            }}) }}
                        </div>
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>
                    </div>

                    {# CORREGIDO: Verifica si el campo roles existe en el formulario #}
                    {% if registrationForm.roles is defined %}
                        <div class="mb-3">
                            {{ form_label(registrationForm.roles, 'Rol') }}
                            {{ form_widget(registrationForm.roles, {'attr': {'class': 'form-select'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(registrationForm.roles) }}
                            </div>
                        </div>
                    {% endif %}

                    <div class="mb-3 form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, 'Acepto los términos y condiciones') }}
                        <div class="invalid-feedback">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus"></i> Crear Cuenta
                        </button>
                    </div>
                    {{ form_end(registrationForm) }}

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="text-muted mb-3">¿Ya tienes cuenta?</p>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Validación del formulario
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('.needs-validation');

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>
{% endblock %}
